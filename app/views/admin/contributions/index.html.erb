<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>投稿一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ニックネーム</th>
            <th>タイトル</th>
            <th>投稿内容</th>
          </tr>
        </thead>
        <% @contributions.each do |contribution| %>
        <tbody>
          <tr>
            <td><%= contribution.user.nickname %></td>
            <td>
              <%= link_to admin_contribution_path(contribution.id) do %>
                <%= contribution.title %>
              <% end %>
            </td>
            <td><%= contribution.body %></td>
          </tr>
        </tbody>
        <% end %>
        <%= paginate @contributions %>
      </table>
    </div>
  </div>
</div>