<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2><%= @user.nickname %> のページ</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>登録情報</th>
            <th><%= link_to "編集する", edit_user_path, class: 'btn-sm btn-success' %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>ニックネーム</td>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td><%= link_to '投稿する', new_contribution_path, class: 'btn-sm btn-primary' %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>
              <% unless @user == current_user %>
                <% if current_user.following?(@user) %>
                  <%= link_to 'フォロー外す', unfollow_path(@user.id), method: :POST %>
                <% else %>
                  <%= link_to 'フォローする', follow_path(@user.id), method: :POST %>
                <% end %>
              <% end %>
            </th>
            <th><%= link_to "フォロー一覧", follow_path, class: 'btn-sm btn-success' %></th>
          </tr>
        </thead>
        <tbody>
        <% @contributions.each do |contribution| %>
          <tr>
            <td>
              <%= link_to contribution_path(contribution.id) do %>
                <%= contribution.title %>
              <% end %>
            </td>
            <td><%= link_to "#{contribution.comments.count} コメント", contribution_path(contribution.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>