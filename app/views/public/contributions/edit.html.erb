<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2><%= @user.nickname %></h2>
      <%= form_with model: @contribution do |f| %>
        <div class = "form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control title"%>
        </div>
        <div class = "form-group">
          <%= f.label :opinion, "本文" %>
          <%= f.text_area :body, class: "form-control body" %>
        </div>
        <div class = "form-group">
          <%= f.submit '更新する', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>